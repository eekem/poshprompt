"use client";

import { useState, useEffect } from "react";
import { useParams } from "next/navigation";
import { useAuth } from "@/app/lib/use-auth";
import Modal from "@/components/Modal";
import TopUpModal from "@/components/TopUpModal";
import StrengthMeter from "@/components/StrengthMeter";
import ModelCreationModal from "@/components/ModelCreationModal";
import { Skeleton, TextSkeleton, CardSkeleton, ToolSkeleton } from "@/components/Skeleton";

interface Category {
  slug: string;
  title: string;
  tools: Tool[];
}

interface Tool {
  slug: string;
  title: string;
  description: string;
  icon: string;
  categorySlug: string;
  promptCost: number;
}

interface PointMap {
  baseMultiplier: number;
  synergyRules: Array<{
    tools: string[];
    bonus: number;
  }>;
  categoryDiversityBonus: number;
  maxStrength: number;
}

interface Challenge {
  id: string;
  title: string;
  description: string;
  version: number;
  isActive: boolean;
  isFeatured: boolean;
  week: string | null;
  rewardZoneType: string;
  rewardZoneValue: number;
  totalPrizePool: number | null;
}

interface SessionData {
  sessionId: string;
  categories: Category[];
  pointMap: PointMap;
}

interface BuildResponse {
  strength: number;
  newTotalStrength: number;
  remainingPrompts: number;
  breakdown: {
    baseScore: number;
    diversityBonus: number;
    synergyBonus: number;
    totalPromptCost: number;
  };
}

export default function ChallengePage() {
  const params = useParams();
  const challengeId = params.id as string;
  const { user, loading: authLoading } = useAuth();

  const [challenge, setChallenge] = useState<Challenge | null>(null);
  const [sessionData, setSessionData] = useState<SessionData | null>(null);
  const [userModel, setUserModel] = useState<any>(null);
  const [hasModel, setHasModel] = useState(false);
  const [selectedTools, setSelectedTools] = useState<string[]>([]);
  const [isLoading, setIsLoading] = useState(false);
  const [isRegenerating, setIsRegenerating] = useState(false);
  const [buildResult, setBuildResult] = useState<BuildResponse | null>(null);
  const [remainingPrompts, setRemainingPrompts] = useState(0);
  const [totalStrength, setTotalStrength] = useState(0);
  const [modelGrowth, setModelGrowth] = useState<any>(null);
  const [totalParticipants, setTotalParticipants] = useState(0);
  const [userPrize, setUserPrize] = useState(0);
  const [rankData, setRankData] = useState<any>(null);
  const [isSidebarOpen, setIsSidebarOpen] = useState(false);
  const [showSuccessModal, setShowSuccessModal] = useState(false);
  const [buildSuccessData, setBuildSuccessData] = useState<any>(null);
  const [isTopUpModalOpen, setIsTopUpModalOpen] = useState(false);
  const [expandedCategories, setExpandedCategories] = useState<Set<string>>(new Set());
  const [isStartingSession, setIsStartingSession] = useState(false);
  const [isModelCreationOpen, setIsModelCreationOpen] = useState(false);

  // Redirect if not authenticated
  useEffect(() => {
    if (!authLoading && !user) {
      window.location.href = "/login";
    }
  }, [user, authLoading]);

  // Load challenge data
  useEffect(() => {
    const loadChallenge = async () => {
      try {
        // Fetch user's current prompt count
        const userResponse = await fetch(`/api/user/stats?userId=${user!.id}`);
        if (userResponse.ok) {
          const userData = await userResponse.json();
          setRemainingPrompts(userData.user?.prompts || 0);
        }

        // Fetch challenge data
        const challengeResponse = await fetch(`/api/challenge/${challengeId}`);
        if (challengeResponse.ok) {
          const challengeData = await challengeResponse.json();
          if (challengeData.success) {
            setChallenge(challengeData.challenge);
          }
        }

        // Check if user has a model for this challenge
        const modelResponse = await fetch(`/api/challenge/${challengeId}/model?userId=${user!.id}`);
        if (modelResponse.ok) {
          const modelData = await modelResponse.json();
          if (modelData.success) {
            setHasModel(modelData.hasModel);
            setUserModel(modelData.model);
          }
        }

        // Fetch user's current total strength for this challenge
        const buildResponse = await fetch(`/api/challenge/${challengeId}/builds?userId=${user!.id}`);
        if (buildResponse.ok) {
          const buildData = await buildResponse.json();
          if (buildData.success) {
            setTotalStrength(buildData.totalStrength || 0);
          }
        }

        // Fetch user's rank and prize information
        const rankResponse = await fetch(`/api/challenge/${challengeId}/rank?userId=${user!.id}`);
        if (rankResponse.ok) {
          const rankData = await rankResponse.json();
          if (rankData.success) {
            setModelGrowth(rankData);
            setTotalParticipants(rankData.totalParticipants);
            setUserPrize(rankData.prize);
            setRankData(rankData);
          }
        }
      } catch (error) {
        console.error("Error loading challenge:", error);
      }
    };

    if (user && challengeId) {
      loadChallenge();
    }
  }, [challengeId, user]);

  const handleToolToggle = (toolSlug: string) => {
    setSelectedTools(prev => {
      if (prev.includes(toolSlug)) {
        return prev.filter(slug => slug !== toolSlug);
      } else {
        return [...prev, toolSlug];
      }
    });
  };

  const handleCategoryToggle = (categorySlug: string) => {
    setExpandedCategories(prev => {
      const newSet = new Set(prev);
      if (newSet.has(categorySlug)) {
        newSet.delete(categorySlug);
      } else {
        newSet.add(categorySlug);
      }
      return newSet;
    });
  };

  const handleModelCreated = (model: any) => {
    setUserModel(model);
    setHasModel(true);
  };

  const handleStartSession = async () => {
    if (!challenge || !user) return;

    setIsStartingSession(true);
    setSelectedTools([]);
    setBuildResult(null);
    setSessionData(null);

    try {
      const response = await fetch(`/api/challenge/${challengeId}/session/start`, {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          "x-user-id": user.id,
        },
      });

      const data = await response.json();

      if (!response.ok) {
        throw new Error(data.error || "Failed to start session");
      }

      // Group tools by category
      const categoriesWithTools = data.categories.map((category: Category) => ({
        ...category,
        tools: data.tools.filter((tool: Tool) => tool.categorySlug === category.slug)
      }));

      setSessionData({
        sessionId: data.sessionId,
        categories: categoriesWithTools,
        pointMap: data.pointMap
      });
      
      // Expand first category by default
      if (categoriesWithTools.length > 0) {
        setExpandedCategories(new Set([categoriesWithTools[0].slug]));
      }

    } catch (error) {
      console.error("Error starting session:", error);
      alert(`Error: ${error instanceof Error ? error.message : "Failed to start session"}`);
    } finally {
      setIsStartingSession(false);
    }
  };

  const calculateTotalPromptCost = () => {
    if (!sessionData || !sessionData.categories) return 0;
    
    let total = 0;
    sessionData.categories.forEach((category: Category) => {
      if (category && category.tools) {
        category.tools.forEach((tool: Tool) => {
          if (selectedTools.includes(tool.slug)) {
            total += tool.promptCost;
          }
        });
      }
    });
    
    return total;
  };

  const handleBuild = async () => {
    if (!sessionData || !user) return;

    if (selectedTools.length === 0) {
      alert("Please select at least one tool to build.");
      return;
    }

    setIsLoading(true);
    setBuildResult(null);

    try {
      const response = await fetch(`/api/challenge/${challengeId}/build`, {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          "x-user-id": user.id,
        },
        body: JSON.stringify({
          sessionId: sessionData.sessionId,
          selectedToolSlugs: selectedTools,
        }),
      });

      const data: BuildResponse | { error: string } = await response.json();

      if (!response.ok) {
        throw new Error((data as { error: string }).error || "Build failed");
      }

      const buildData = data as BuildResponse;
      setBuildResult(buildData);
      setTotalStrength(buildData.newTotalStrength);
      setRemainingPrompts(buildData.remainingPrompts); // Update remaining prompts after build
      setSelectedTools([]); // Clear selection after successful build
      setSessionData(null); // Clear session after successful build
      
      // Show success modal/bottom sheet
      setBuildSuccessData({
        strength: buildData.strength,
        newTotalStrength: buildData.newTotalStrength,
        breakdown: buildData.breakdown
      });
      setShowSuccessModal(true);
      
      // Refresh rank data after build
      const rankResponse = await fetch(`/api/challenge/${challengeId}/rank?userId=${user!.id}`);
      if (rankResponse.ok) {
        const rankData = await rankResponse.json();
        if (rankData.success) {
          setModelGrowth(rankData);
          setTotalParticipants(rankData.totalParticipants);
          setUserPrize(rankData.prize);
          setRankData(rankData);
        }
      }

    } catch (error) {
      console.error("Error building:", error);
      alert(`Error: ${error instanceof Error ? error.message : "Build failed"}`);
    } finally {
      setIsLoading(false);
    }
  };

  const handleRegenerate = async () => {
    if (!challenge) return;

    setIsRegenerating(true);
    setSelectedTools([]);
    setBuildResult(null);
    setSessionData(null);

    try {
      const response = await fetch(`/api/challenge/${challengeId}/regenerate`, {
        method: "POST",
      });

      const data = await response.json();

      if (!response.ok) {
        throw new Error(data.error || "Regeneration failed");
      }

      setChallenge(data.challenge);
      
    } catch (error) {
      console.error("Error regenerating:", error);
      alert(`Error: ${error instanceof Error ? error.message : "Regeneration failed"}`);
    } finally {
      setIsRegenerating(false);
    }
  };

  const handleTopUpComplete = (additionalPrompts: number) => {
    setRemainingPrompts(prev => prev + additionalPrompts);
  };

  const getSafeToolIcon = (icon: string) => {
    // List of common Material Symbols icons that are likely to exist
    const commonIcons = [
      'build', 'code', 'data_object', 'storage', 'memory', 'cpu', 'settings',
      'integration_instructions', 'api', 'cloud', 'dns', 'language', 'translate',
      'psychology', 'smart_toy', 'analytics', 'bar_chart', 'trending_up',
      'security', 'lock', 'key', 'shield', 'bug_report', 'healing',
      'auto_fix_high', 'construction', 'handyman', 'tools', 'hardware',
      'terminal', 'console', 'developer_mode', 'code_blocks', 'functions'
    ];
    
    // If the icon is in our safe list or is a simple word, use it
    if (commonIcons.includes(icon) || /^[a-z_]+$/.test(icon)) {
      return icon;
    }
    
    // Otherwise, use a default icon
    return 'build';
  };

  const getTierInfo = (strength: number, rankData: any) => {
    // If we have rank data, use it for tier determination
    if (rankData && rankData.rank) {
      const percentile = rankData.percentile || 0;
      const rank = rankData.rank;
      const prize = rankData.prize || 0;
      
      let tier, icon, nextTier, nextTierMin, reward, progress;
      
      if (percentile >= 90) {
        tier = 'Elite';
        icon = 'üëë';
        nextTier = null;
        nextTierMin = null;
        reward = prize > 0 ? `$${prize} Prize` : 'Elite Rewards';
        progress = 100;
      } else if (percentile >= 70) {
        tier = 'Advanced';
        icon = '‚ö°';
        nextTier = 'Elite';
        nextTierMin = Math.ceil(totalParticipants * 0.1); // Top 10%
        reward = prize > 0 ? `$${prize} Prize` : 'Advanced Rewards';
        progress = ((percentile - 70) / 20) * 100;
      } else if (percentile >= 40) {
        tier = 'Skilled';
        icon = '‚ö°';
        nextTier = 'Advanced';
        nextTierMin = Math.ceil(totalParticipants * 0.3); // Top 30%
        reward = 'XP';
        progress = ((percentile - 40) / 30) * 100;
      } else {
        tier = 'Rookie';
        icon = 'üå±';
        nextTier = 'Skilled';
        nextTierMin = Math.ceil(totalParticipants * 0.6); // Top 60%
        reward = 'XP only';
        progress = Math.min((percentile / 40) * 100, 100);
      }
      
      return {
        tier,
        icon,
        rank,
        nextTier,
        nextTierMin,
        reward,
        progress,
        percentile: Math.round(percentile),
        totalParticipants,
        prize
      };
    }
    
    // Fallback to strength-based system if no rank data
    if (strength <= 39) {
      return {
        tier: 'Rookie',
        icon: 'üå±',
        rank: null,
        nextTier: 'Skilled',
        nextTierMin: 40,
        reward: 'XP only',
        progress: Math.min((strength / 40) * 100, 100),
        percentile: null,
        totalParticipants: 0,
        prize: 0
      };
    } else if (strength <= 69) {
      return {
        tier: 'Skilled',
        icon: '‚ö°',
        rank: null,
        nextTier: 'Advanced',
        nextTierMin: 70,
        reward: 'XP',
        progress: ((strength - 40) / 30) * 100,
        percentile: null,
        totalParticipants: 0,
        prize: 0
      };
    } else if (strength <= 89) {
      return {
        tier: 'Advanced',
        icon: '‚ö°',
        rank: null,
        nextTier: 'Elite',
        nextTierMin: 90,
        reward: 'XP + small bonus',
        progress: ((strength - 70) / 20) * 100,
        percentile: null,
        totalParticipants: 0,
        prize: 0
      };
    } else {
      return {
        tier: 'Elite',
        icon: 'üëë',
        rank: null,
        nextTier: null,
        nextTierMin: null,
        reward: 'XP + Cash/Coins',
        progress: 100,
        percentile: null,
        totalParticipants: 0,
        prize: 0
      };
    }
  };

  // Show loading state while checking authentication
  if (authLoading) {
    return (
      <div className="flex items-center justify-center h-screen bg-background-dark">
        <div className="text-white">Loading...</div>
      </div>
    );
  }

  // Don't render if user is not authenticated
  if (!user) {
    return null;
  }

  if (!challenge) {
    return (
      <div className="flex items-center justify-center h-screen bg-background-dark">
        <div className="text-white">Loading challenge...</div>
      </div>
    );
  }

  const totalPromptCost = sessionData ? calculateTotalPromptCost() : 0;

  return (
    <div className="bg-background-light dark:bg-background-dark font-display text-white overflow-hidden h-screen flex">
      {/* Main Content */}
      <main className="flex-1 flex flex-col h-full bg-background-dark">
        {/* Header */}
        <header className="h-16 border-b border-[#332a1e] flex items-center justify-between px-4 sm:px-6 lg:px-8 bg-sidebar-dark/50 backdrop-blur-sm">
          <div className="flex items-center gap-2 sm:gap-4">
            <button
              onClick={() => window.history.back()}
              className="p-2 hover:bg-surface-dark/80 rounded-lg transition-colors"
            >
              <span className="material-symbols-outlined text-white">arrow_back</span>
            </button>
            <h1 className="text-lg sm:text-xl font-bold text-white tracking-tight truncate">
              {challenge.title}
            </h1>
          </div>

          <div className="flex items-center gap-2 sm:gap-4">
            <div className="flex items-center gap-2 text-primary font-mono text-sm sm:text-lg font-bold">
              <span className="material-symbols-outlined text-sm sm:text-base">psychology</span>
              <span className="hidden sm:inline">{remainingPrompts} prompts</span>
              <span className="sm:hidden">{remainingPrompts}</span>
            </div>
          </div>
        </header>

        <div className="flex-1 flex overflow-hidden flex-col lg:flex-row">
          {/* Challenge Content */}
          <div className="flex-1 overflow-y-auto p-4 sm:p-6 lg:p-8 order-2 lg:order-1 relative">
            {/* Mobile Performance Button */}
            <div className="lg:hidden fixed bottom-4 right-4 z-40">
              <button
                onClick={() => setIsSidebarOpen(true)}
                className="bg-primary hover:bg-primary/90 text-black px-4 py-2.5 rounded-full font-medium transition-all shadow-lg flex items-center gap-2"
              >
                <span className="material-symbols-outlined text-base">analytics</span>
                <span className="text-sm font-medium">Performance</span>
                {totalStrength > 0 && (
                  <span className="bg-black/20 px-2 py-0.5 rounded-full text-xs font-bold">
                    {totalStrength}
                  </span>
                )}
              </button>
            </div>
            {/* Description */}
            <div className="mb-6 sm:mb-8">
              <h2 className="text-xl sm:text-2xl font-bold text-white mb-3 sm:mb-4">Challenge Overview</h2>
              <p className="text-gray-300 leading-relaxed text-sm sm:text-base">
                {challenge.description}
              </p>
            </div>

            {/* Tools by Category */}
            <div className="mb-6 sm:mb-8">
              <h3 className="text-lg sm:text-xl font-bold text-white mb-4 sm:mb-6">Available Tools</h3>
              
              {/* Desktop Build Button */}
              {sessionData && (
                <div className="hidden lg:block mb-6">
                  <button
                    onClick={handleBuild}
                    disabled={isLoading || selectedTools.length === 0}
                    className="w-full bg-primary hover:bg-primary/90 text-black py-3 rounded-lg font-semibold disabled:opacity-50 disabled:cursor-not-allowed transition-colors"
                  >
                    {isLoading ? "Building..." : "Build Model"}
                  </button>
                </div>
              )}
               {!hasModel ? (
                <div className="text-center py-6 sm:py-8">
                  <div className="mb-4 sm:mb-6">
                    <div className="w-16 h-16 sm:w-20 sm:h-20 bg-surface-dark border-2 border-dashed border-[#332a1e] rounded-full flex items-center justify-center mx-auto mb-3 sm:mb-4">
                      <span className="material-symbols-outlined text-2xl sm:text-3xl text-gray-400">add</span>
                    </div>
                    <h4 className="text-lg sm:text-xl font-semibold text-white mb-2">Create Your AI Model</h4>
                    <p className="text-gray-400 max-w-sm sm:max-w-md mx-auto text-sm sm:text-base">
                      Before you can start building, create a personalized AI model for this challenge.
                      Give it a name and choose an avatar to get started.
                    </p>
                  </div>
                  <button
                    onClick={() => setIsModelCreationOpen(true)}
                    className="bg-primary hover:bg-primary/90 text-black px-4 sm:px-6 py-2.5 sm:py-3 rounded-lg font-medium transition-colors w-full sm:w-auto"
                  >
                    Create AI Model
                  </button>
                </div>
              ) : !sessionData ? (
                <div className="text-center py-6 sm:py-8">
                  {userModel && (
                    <div className="mb-4 sm:mb-6">
                      <div className="flex items-center justify-center gap-2 sm:gap-3 mb-3 sm:mb-4">
                        <div className="w-10 h-10 sm:w-12 sm:h-12 bg-primary/20 rounded-lg flex items-center justify-center">
                          <span className="material-symbols-outlined text-primary text-lg sm:text-xl">
                            {userModel.image || "smart_toy"}
                          </span>
                        </div>
                        <div className="text-left">
                          <h4 className="text-base sm:text-lg font-semibold text-white">{userModel.title}</h4>
                          <p className="text-xs sm:text-sm text-gray-400">Your AI Model</p>
                        </div>
                      </div>
                    </div>
                  )}
                  <button
                    onClick={handleStartSession}
                    disabled={isStartingSession}
                    className="bg-primary hover:bg-primary/90 text-black px-4 sm:px-6 py-2.5 sm:py-3 rounded-lg font-medium disabled:opacity-50 disabled:cursor-not-allowed transition-colors w-full sm:w-auto"
                  >
                    {isStartingSession ? "Starting Session..." : "Start Building Session"}
                  </button>
                  <p className="text-gray-400 mt-3 sm:mt-4 text-sm sm:text-base">
                    Start a new building session to generate tools and categories for this challenge.
                  </p>
                </div>
              ) : (
                sessionData.categories.map((category: Category) => (
                  <div key={category.slug} className="mb-4">
                    <button
                      onClick={() => handleCategoryToggle(category.slug)}
                      className="w-full flex items-center justify-between p-4 bg-surface-dark border border-[#332a1e] rounded-lg hover:bg-surface-dark/80 transition-colors"
                    >
                      <div className="flex items-center gap-2 sm:gap-3">
                        <span className="material-symbols-outlined text-primary">
                          {expandedCategories.has(category.slug) ? "expand_less" : "expand_more"}
                        </span>
                        <h4 className="text-base sm:text-lg font-semibold text-white truncate">
                          {category.title}
                        </h4>
                        <span className="text-xs sm:text-sm text-gray-400 whitespace-nowrap">
                          ({category.tools?.length || 0} tools)
                        </span>
                      </div>
                    </button>

                    {expandedCategories.has(category.slug) && category.tools && (
                      <div className="mt-2 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 sm:gap-4">
                        {category.tools.map((tool: Tool) => (
                          <div
                            key={tool.slug}
                            className={`p-4 border rounded-lg cursor-pointer transition-all ${
                              selectedTools.includes(tool.slug)
                                ? "bg-primary/20 border-primary text-white"
                                : "bg-surface-dark border-[#332a1e] hover:bg-surface-dark/80"
                            }`}
                            onClick={() => handleToolToggle(tool.slug)}
                          >
                            <div className="flex items-start gap-2 sm:gap-3">
                              <span className="material-symbols-outlined text-primary text-lg sm:text-xl">
                                {getSafeToolIcon(tool.icon)}
                              </span>
                              <div className="flex-1 min-w-0">
                                <h5 className="font-semibold text-white mb-1 text-sm sm:text-base truncate">
                                  {tool.title}
                                </h5>
                                <p className="text-xs sm:text-sm text-gray-400 mb-2 line-clamp-2">
                                  {tool.description}
                                </p>
                                <div className="flex items-center justify-between">
                                  <span className="text-xs bg-primary/20 text-primary px-2 py-1 rounded-full font-medium">
                                    {tool.promptCost} prompts
                                  </span>
                                  {selectedTools.includes(tool.slug) && (
                                    <span className="material-symbols-outlined text-primary text-sm">
                                      check_circle
                                    </span>
                                  )}
                                </div>
                              </div>
                            </div>
                          </div>
                        ))}
                      </div>
                    )}
                  </div>
                )
              )}
             </div>

            {/* Mobile Build Button */}
            {sessionData && (
              <div className="lg:hidden fixed bottom-20 right-4 z-30">
                <button
                  onClick={handleBuild}
                  disabled={isLoading || selectedTools.length === 0}
                  className="bg-primary hover:bg-primary/90 text-black px-4 py-2.5 rounded-full font-medium transition-all shadow-lg flex items-center gap-2"
                >
                  <span className="material-symbols-outlined text-base">build</span>
                  <span className="text-sm font-medium">Build</span>
                  {selectedTools.length > 0 && (
                    <span className="bg-black/20 px-2 py-0.5 rounded-full text-xs font-bold">
                      {selectedTools.length}
                    </span>
                  )}
                </button>
              </div>
            )}
          </div>

          {/* Sidebar - Offcanvas on Mobile, Fixed on Desktop */}
          <div className={`fixed inset-y-0 right-0 z-60 w-full sm:w-80 lg:w-96 bg-sidebar-dark lg:border-r lg:border-[#332a1e] lg:relative lg:inset-auto transform transition-transform duration-300 ease-in-out lg:transform-none ${
            isSidebarOpen ? 'translate-x-0' : 'translate-x-full lg:translate-x-0'
          }`}>
            {/* Mobile Close Button */}
            <div className="lg:hidden flex items-center justify-between p-4 border-b border-[#332a1e]">
              <h3 className="text-lg font-semibold text-white">Performance</h3>
              <button
                onClick={() => setIsSidebarOpen(false)}
                className="p-2 hover:bg-surface-dark rounded-lg transition-colors"
              >
                <span className="material-symbols-outlined text-white">close</span>
              </button>
            </div>
            
            {/* Mobile Backdrop */}
            {/* {isSidebarOpen && (
              <div 
                className="lg:hidden fixed inset-0 bg-black/50 z-45" 
                onClick={() => setIsSidebarOpen(false)}
              />
            )} */}
            
            <div className="h-full overflow-y-auto p-4 sm:p-6">
            {/* Build Summary */}
            <div className="mb-4 sm:mb-6">
              <h3 className="text-base sm:text-lg font-semibold text-white mb-3 sm:mb-4">Build Summary</h3>
              
              {/* Model Info Display */}
              {userModel && (
                <div className="mb-3 sm:mb-4 p-3 sm:p-4 bg-surface-dark border border-[#332a1e] rounded-lg">
                  <div className="flex items-center gap-2 sm:gap-3">
                    <div className="w-10 h-10 sm:w-12 sm:h-12 bg-primary/20 rounded-lg flex items-center justify-center">
                      <span className="material-symbols-outlined text-primary text-lg sm:text-xl">
                        {userModel.image || "smart_toy"}
                      </span>
                    </div>
                    <div className="min-w-0">
                      <h4 className="text-sm sm:text-lg font-semibold text-white truncate">{userModel.title}</h4>
                      <p className="text-xs sm:text-sm text-gray-400">Your AI Model</p>
                    </div>
                  </div>
                </div>
              )}
              
              {/* Current Strength Display with Tier System */}
              {totalStrength > 0 && (() => {
                const tierInfo = getTierInfo(totalStrength, modelGrowth);
                return (
                  <div className="mb-3 sm:mb-4 p-3 sm:p-4 bg-surface-dark border border-[#332a1e] rounded-lg">
                    <div className="flex justify-between items-center mb-2 sm:mb-3">
                      <span className="text-gray-400 text-sm sm:text-base">Model Strength:</span>
                      <span className="text-xl sm:text-2xl font-bold text-primary">{totalStrength}</span>
                    </div>
                    
                    <div className="flex items-center gap-2 mb-2 sm:mb-3 flex-wrap">
                      <span className="text-base sm:text-lg font-semibold text-white">Tier: {tierInfo.tier}</span>
                      <span className="text-lg">{tierInfo.icon}</span>
                      {tierInfo.percentile !== null && (
                        <span className="text-xs sm:text-sm text-gray-400">(Top {100 - tierInfo.percentile}% of models)</span>
                      )}
                    </div>
                    
                    {tierInfo.percentile !== null && (
                      <div className="mb-3">
                        <div className="flex justify-between items-center text-sm mb-1">
                          <span className="text-gray-400">Percentile:</span>
                          <span className="text-primary">Top {100 - tierInfo.percentile}%</span>
                        </div>
                      </div>
                    )}
                    
                    {tierInfo.nextTier && tierInfo.nextTierMin && (
                      <div className="mb-3">
                        <div className="flex justify-between items-center text-sm mb-1">
                          <span className="text-gray-400">Next Tier: {tierInfo.nextTier}</span>
                          <span className="text-primary">
                            {tierInfo.percentile !== null ? `Top ${100 - ((tierInfo.nextTierMin / tierInfo.totalParticipants) * 100)}%` : `${tierInfo.nextTierMin}+ points`}
                          </span>
                        </div>
                        <div className="w-full bg-gray-700 rounded-full h-2">
                          <div 
                            className="bg-primary h-2 rounded-full transition-all duration-300"
                            style={{ width: `${tierInfo.progress}%` }}
                          />
                        </div>
                      </div>
                    )}
                    
                    <div className="border-t border-[#332a1e] pt-3">
                      <div className="text-sm font-semibold text-white mb-2">Tier Progression:</div>
                      <div className="space-y-1">
                        {tierInfo.percentile !== null && (
                          <div className="flex items-center gap-2 text-sm text-gray-400">
                            <span>üìà</span>
                            <span>Model Growth: Top {100 - tierInfo.percentile}% of all models</span>
                          </div>
                        )}
                        {tierInfo.nextTier && tierInfo.nextTierMin && (
                          <div className="flex items-center gap-2 text-sm text-primary">
                            <span>üéØ</span>
                            <span>Next Tier: {tierInfo.nextTier} (Top {100 - ((tierInfo.nextTierMin / tierInfo.totalParticipants) * 100)}%)</span>
                          </div>
                        )}
                      </div>
                    </div>
                    
                    <div className="border-t border-[#332a1e] pt-3 mt-3">
                      <div className="text-sm font-semibold text-white mb-2">Reward Zones:</div>
                      <div className="space-y-1">
                        {tierInfo.prize > 0 && (
                          <div className="flex items-center gap-2 text-sm text-green-400">
                            <span>üèÜ</span>
                            <span>Current Prize: ${tierInfo.prize}</span>
                          </div>
                        )}
                        <div className={`flex items-center gap-2 text-sm ${tierInfo.percentile !== null && tierInfo.percentile >= 70 ? 'text-green-400' : 'text-gray-400'}`}>
                          <span>{tierInfo.percentile !== null && tierInfo.percentile >= 70 ? '‚úî' : 'üîí'}</span>
                          <span>Advanced Zone: {tierInfo.percentile !== null ? 'Top 30% of models' : '70+ points'}</span>
                        </div>
                        <div className={`flex items-center gap-2 text-sm ${tierInfo.percentile !== null && tierInfo.percentile >= 90 ? 'text-green-400' : 'text-gray-400'}`}>
                          <span>{tierInfo.percentile !== null && tierInfo.percentile >= 90 ? '‚úî' : 'üîí'}</span>
                          <span>Elite Zone: {tierInfo.percentile !== null ? 'Top 10% of models' : '90+ points'} {tierInfo.prize > 0 ? `($${tierInfo.prize})` : '(Locked)'}</span>
                        </div>
                      </div>
                    </div>
                  </div>
                );
              })()}
              
              <div className="space-y-3">
                <div className="flex justify-between">
                  <span className="text-gray-400">Selected Tools:</span>
                  <span className="text-white font-medium">{selectedTools.length}</span>
                </div>
                
                <div className="flex justify-between">
                  <span className="text-gray-400">Total Cost:</span>
                  <span className="text-primary font-medium">{totalPromptCost} prompts</span>
                </div>
              </div>
            </div>

            {/* Build Button */}
            {sessionData && (
              <button
                onClick={handleBuild}
                disabled={isLoading || selectedTools.length === 0}
                className="w-full bg-primary hover:bg-primary/90 text-black py-2.5 sm:py-3 rounded-lg font-semibold disabled:opacity-50 disabled:cursor-not-allowed transition-colors mb-4 sm:mb-6"
              >
                {isLoading ? "Building..." : "Build Model"}
              </button>
            )}

            {!sessionData && (
              <div className="text-center py-3 sm:py-4 px-3 sm:px-4 bg-surface-dark border border-[#332a1e] rounded-lg mb-4 sm:mb-6">
                <p className="text-gray-400 text-xs sm:text-sm">
                  Start a building session to begin selecting tools and building your model.
                </p>
              </div>
            )}

            {/* Strength Meter */}
            {buildResult && (
              <div className="mb-4 sm:mb-6">
                <StrengthMeter
                  strength={buildResult.strength}
                  totalStrength={buildResult.newTotalStrength}
                  showBreakdown={true}
                  breakdown={buildResult.breakdown}
                />
              </div>
            )}

            {/* Instructions */}
            <div className="text-xs sm:text-sm text-gray-400">
              <h4 className="font-semibold text-white mb-2 text-sm sm:text-base">How to Play:</h4>
              <ul className="space-y-1">
                <li>‚Ä¢ Select tools from different categories</li>
                <li>‚Ä¢ Look for synergy bonuses between tools</li>
                <li>‚Ä¢ Build your model to earn strength</li>
                <li>‚Ä¢ Start new sessions for fresh tools</li>
              </ul>
            </div>
            </div>
          </div>
        </div>
      </main>

      {/* Top Up Modal */}
      {isTopUpModalOpen && (
        <TopUpModal
          isOpen={isTopUpModalOpen}
          onClose={() => setIsTopUpModalOpen(false)}
          onTopUpComplete={handleTopUpComplete}
        />
      )}

      {/* Model Creation Modal */}
      {challenge && user && (
        <ModelCreationModal
          isOpen={isModelCreationOpen}
          onClose={() => setIsModelCreationOpen(false)}
          onModelCreated={handleModelCreated}
          challengeTitle={challenge.title}
          userId={user.id}
        />
      )}

      {/* Success Modal */}
      {showSuccessModal && buildSuccessData && (
        <Modal
          isOpen={showSuccessModal}
          onClose={() => setShowSuccessModal(false)}
          title="Build Successful!"
        >
          <div className="space-y-6">
            {/* Desktop View */}
            <div className="hidden lg:block space-y-6">
              <div className="text-center">
                <div className="flex items-center justify-center mb-4">
                  <div className="w-16 h-16 bg-green-500/20 rounded-full flex items-center justify-center mb-4">
                    <span className="material-symbols-outlined text-3xl text-green-500">check_circle</span>
                  </div>
                </div>
                <div className="text-4xl font-bold text-primary mb-2">
                  +{buildSuccessData.strength}
                </div>
                <p className="text-gray-400">Strength Added</p>
              </div>
              
              <div className="bg-surface-dark/50 border border-[#332a1e] rounded-lg p-4">
                <div className="space-y-2">
                  <div className="flex justify-between">
                    <span className="text-gray-400">Previous Total:</span>
                    <span className="text-white font-medium">
                      {buildSuccessData.newTotalStrength - buildSuccessData.strength}
                    </span>
                  </div>
                  <div className="flex justify-between">
                    <span className="text-gray-400">Added:</span>
                    <span className="text-primary font-medium">+{buildSuccessData.strength}</span>
                  </div>
                  <div className="flex justify-between pt-2 border-t border-[#332a1e]">
                    <span className="text-gray-400">New Total:</span>
                    <span className="text-white font-bold text-lg">{buildSuccessData.newTotalStrength}</span>
                  </div>
                </div>
              </div>
              
              <button
                onClick={() => setShowSuccessModal(false)}
                className="w-full bg-primary hover:bg-primary/90 text-black py-3 rounded-lg font-semibold transition-colors"
              >
                Continue Building
              </button>
            </div>
            
            {/* Mobile View */}
            <div className="lg:hidden space-y-4">
              <div className="flex items-center justify-between">
                <div className="flex items-center gap-3">
                  <div className="w-12 h-12 bg-green-500/20 rounded-full flex items-center justify-center">
                    <span className="material-symbols-outlined text-2xl text-green-500">check_circle</span>
                  </div>
                  <div>
                    <div className="text-2xl font-bold text-primary">+{buildSuccessData.strength}</div>
                    <p className="text-sm text-gray-400">Strength Added</p>
                  </div>
                </div>
                <div className="text-right">
                  <div className="text-lg font-bold text-white">{buildSuccessData.newTotalStrength}</div>
                  <p className="text-sm text-gray-400">Total Strength</p>
                </div>
              </div>
              
              <button
                onClick={() => setShowSuccessModal(false)}
                className="w-full bg-primary hover:bg-primary/90 text-black py-2.5 rounded-lg font-semibold transition-colors"
              >
                Continue Building
              </button>
            </div>
          </div>
        </Modal>
      )}
    </div>
  );
}
